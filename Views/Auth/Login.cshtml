@{
    Layout = null;
    var returnUrl = (ViewBag.ReturnUrl as string) ?? "/";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Sign in</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
</head>
<body style="font-family:system-ui,-apple-system,Segoe UI,Roboto,Arial,sans-serif; padding:40px; max-width:560px; margin:auto">
<h2>Войти</h2>
<p>Выберите провайдера авторизации:</p>

<p>
    <a href="/auth/external/Google?returnUrl=@Uri.EscapeDataString(returnUrl)"
       style="display:inline-block;padding:10px 16px;border:1px solid #ccc;border-radius:8px;text-decoration:none">
        Войти через Google
    </a>
</p>

<p>
    <a href="/auth/external/GitHub?returnUrl=@Uri.EscapeDataString(returnUrl)"
       style="display:inline-block;padding:10px 16px;border:1px solid #ccc;border-radius:8px;text-decoration:none">
        Войти через GitHub
    </a>
</p>

<p style="margin-top:24px">
    <a href="/">Назад на главную</a>
</p>
</body>
</html>